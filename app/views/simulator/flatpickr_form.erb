<div class="container">
  <form action="<%= tup_url %>" accept-charset="UTF-8" method="post" id="flatpickr-form">
    <div id="wrapper">
      <div class="row mx-0 py-3 px-2">
        <div class="col-12 col-lg-5 col-xl-6">
          <%= erb :'simulator/calendar' %>
        </div>
        <div class="d-flex flex-row justify-content-center align-items-center col-12 col-lg-7 col-xl-6 p-0">
          <div id="results">
            <%= erb :'simulator/starting_points' %>
            <%= erb :'simulator/results' %>
          </div>
        </div>
      </div>
    </div>
    <div class="d-flex flex-row flex-wrap justify-content-end align-items-center mt-3" id="submit-btn-wrapper">
      <button type="submit" class="btn btn-primary" id="compute-btn">
        Calculer
        <span class="ml-1">
          <i class="fas fa-arrow-right"></i>
        </span>
      </button>
    </div>
  </form>
</div>
